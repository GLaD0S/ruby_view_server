<%
  def link_to(name, url)
      return "<a href='#{url}'>#{name}</a>"
  end
  def para(stuff)
    return "<p>#{stuff}</p>"
  end
%>

<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>Put things in the header</p>
      <a href='me.html'>Me</a>
      <%= para(link_to("Best website ever", "http://www.davidbroadlick.me/film/index.php")) %>
    </p>
    <hr />
    <div>
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>Put things in the footer</p>
    </div>
  </body>
</html>